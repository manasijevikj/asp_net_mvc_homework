@model List<PizzaListViewModel>

    <div class="text-center">
        <a asp-action="Create" asp-controller="Pizza" class="btn">Create pizza</a>
        <h2 class="display-4">List of pizzas:</h2>
    </div>
    <br />


    <div class="row">
        @foreach (var pizza in @Model)
        {


            <div class="card text-white bg-dark mb-3" style="max-width: 18rem; margin-left:10px;">

                <div class="card-body">
                    <h5 class="card-title text-center">@pizza.Name</h5>
                    <img class="card-img-top" src="https://alternate-takes.com/wp-content/uploads/2021/05/s2.jpg" alt="Card image cap">
                </div>
                <a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id" style="text-align:center">See details</a>
            </div>}
    </div>