@model FeedbackDetailsViewModel

<h3>Are you sure you want to delete the following feedback:</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title"><label asp-for="Name"></label>: @Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted"><label asp-for="Email"></label>: @Model.Email</h6>
        <h6 class="card-subtitle mb-2 text-muted"><label asp-for="Message"></label>: @Model.Message</h6>
    </div>
</div>
<br />



<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" />
</form>
<a asp-action="Index">Back/Cancel</a>
